<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ListApp.VIews.ListContentView">
	<ContentView.Content>
        <Grid HeightRequest="40">
            <Label Grid.Column="0" Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" Font="Large"/>
            <Label Grid.Column="1" Text="{Binding DateReceived, StringFormat='{0:dd/MM/yy}'}" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" TextColor="Black" Font="Large"/>
            <Label Grid.Column="2" Text="{Binding Price}" VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" Font="Large"/>
        </Grid> 
	</ContentView.Content>
</ContentView>
